{
  "name": "coverall",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/_mocha test --recursive --timeout 10000",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary ./node_modules/.bin/_mocha test --recursive --timeout 10000 && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1"
  }
}
